@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject NavigationManager Navigation

<div class="d-flex justify-content-between align-items-center w-100">
    <div>
        <h5 class="mb-0">Dashboard</h5>
    </div>

    <div class="d-flex align-items-center">
        <AuthorizeView Context="topBarContext">
            <Authorized>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="oi oi-person me-1"></span>
                        @GetUserDisplayName(topBarContext)
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><h6 class="dropdown-header">@GetCompanyName(topBarContext)</h6></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="perfil">
                                <span class="oi oi-person me-2"></span>Mi Perfil
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="configuracion">
                                <span class="oi oi-cog me-2"></span>Configuración
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <button class="dropdown-item text-danger" @onclick="Logout">
                                <span class="oi oi-account-logout me-2"></span>Cerrar Sesión
                            </button>
                        </li>
                    </ul>
                </div>
            </Authorized>
            <NotAuthorized>
                <a href="login" class="btn btn-primary">Iniciar Sesión</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

@code {
    private string GetUserDisplayName(AuthenticationState authState)
    {
        return authState.User.FindFirst("full_name")?.Value
               ?? authState.User.FindFirst(ClaimTypes.Name)?.Value
               ?? "Usuario";
    }

    private string GetCompanyName(AuthenticationState authState)
    {
        return authState.User.FindFirst("empresa_nombre")?.Value ?? "NexaERP";
    }

    private async Task Logout()
    {
        Navigation.NavigateTo("/login", true);
    }
}