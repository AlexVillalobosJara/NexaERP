@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <span class="me-2">🏢</span>
            NexaERP
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click();">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

        <AuthorizeView Roles="Administrador" Context="navContext">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="usuarios">
                        <span class="oi oi-people" aria-hidden="true"></span> Usuarios
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="empresas">
                        <span class="oi oi-building" aria-hidden="true"></span> Empresas
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="inventario">
                <span class="oi oi-box" aria-hidden="true"></span> Inventario
            </NavLink>
        </div>
    </nav>
</div>